<div class="w-75 m-auto my-5">
  <h5>List of users in the server</h5>
  <span>We need&nbsp;<span id="users-legth">0</span>/10&nbsp;users</span>

  <div class="row gx-5 mt-4">
    <div class="col-md-6 col-sm-12">
      <table class="table mt-4">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Is preferences added?</th>
          </tr>
        </thead>
        <tbody id="users-table"></tbody>
      </table>
    </div>
    <div class="col-md-6 col-sm-12">
      <div class="bg-white rounded shadow p-4">
        <div id="login-container" style="display: block">
          <h5>Create or login a user</h5>
          <div class="input-group mb-3 mt-3">
            <input
              type="text"
              class="form-control"
              placeholder="Enter your name"
              aria-label="Name"
              aria-describedby="basic-addon1"
              id="name-input"
            />
          </div>

          <div class="mb-4">
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="flexRadioDefault"
                id="check-male"
                value="male"
                checked
              />
              <label class="form-check-label" for="check-male">Male</label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="flexRadioDefault"
                id="check-female"
                value="female"
              />
              <label class="form-check-label" for="check-female">
                Female
              </label>
            </div>
          </div>

          <button id="login-btn" class="btn btn-primary">Submit!</button>
        </div>

        <div id="welcome-container" style="display: none">
          <h5>Welcome&nbsp;<span id="login-user">user</span>!</h5>
          <span>Your gender:&nbsp;<span id="user-gender">None</span></span>

          <div id="preferences-drag-list" class="row gx-2 mt-4 mb-3">
            <div class="col-md-6">
              <span class="d-block mb-3">Arrange users for Irvings</span>
              <div id="irvings-preferences-list"></div>
            </div>
            <div class="col-md-6">
              <span class="d-block mb-3">Arrange users for Gale-Shapely</span>
              <div id="gale-preferences-list"></div>
            </div>
          </div>

          <button id="make-preferences-btn" class="btn btn-primary">
            Submit!
          </button>
        </div>
      </div>
    </div>
  </div>
  <style>
    .draggable {
      cursor: move;
      margin-bottom: 1rem;
      user-select: none;

      /* Center the content */
      align-items: center;
      display: flex;
      justify-content: center;

      /* Size */
      height: 3rem;
      width: 10rem;

      /* Misc */
      border: 1px solid #cbd5e0;
    }
    .placeholder {
      background-color: #edf2f7;
      border: 2px dashed #cbd5e0;
      margin-bottom: 1rem;
    }
  </style>
</div>
